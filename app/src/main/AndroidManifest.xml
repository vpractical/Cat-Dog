<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.y">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".app.CatDogApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.activity.WelcomeActivity"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.activity.LoginActivity" />
        <activity android:name=".mvp.activity.MainActivity" />
        <activity
            android:name=".mvp.activity.game.astar.AStarActivity"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".mvp.activity.game.party.PartyActivity"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".mvp.activity.game.plus.PlusActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name=".mvp.activity.RoleActivity"/>

        <activity android:name=".mvp.activity.VideoActivity"
            />
        <!--android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"-->

        <meta-data
            android:name="com.y.config.GlobalConfiguration"
            android:value="ConfigModule" />

    </application>

</manifest>