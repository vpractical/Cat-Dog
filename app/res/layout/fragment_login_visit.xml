<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <ImageView
        android:id="@+id/iv_visit_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/visit"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="60dp"
        />

    <TextView
        android:id="@+id/tv_visit_nick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="卡罗蛇眼"
        app:layout_constraintLeft_toRightOf="@id/iv_visit_avatar"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_visit_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:textSize="@dimen/sp14"
        />

    <TextView
        android:id="@+id/tv_visit_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="1000000000"
        app:layout_constraintLeft_toRightOf="@id/iv_visit_avatar"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_visit_avatar"
        android:layout_marginBottom="12dp"
        android:textSize="@dimen/sp14"
        />

    <TextView
        android:id="@+id/tv_visit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:textSize="@dimen/sp16"
        />


</android.support.constraint.ConstraintLayout>