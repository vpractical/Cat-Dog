<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget"
    android:orientation="horizontal"
    tools:layout_height="80dp"
    >

    <LinearLayout
        android:id="@+id/container_widget_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/home_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="3dp"
            android:text="新闻" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_widget_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/chat_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="3dp"
            android:text="聊天" />

    </LinearLayout>\

    <LinearLayout
        android:id="@+id/container_widget_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/game_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="3dp"
            android:text="游戏" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_widget_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/video_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="3dp"
            android:text="视频" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_widget_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/more_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="3dp"
            android:text="咸鱼" />

    </LinearLayout>

</LinearLayout>