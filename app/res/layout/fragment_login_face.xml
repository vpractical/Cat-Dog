<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <com.guo.android_extend.widget.CameraSurfaceView
        android:id="@+id/surfaceView_login_face"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <com.guo.android_extend.widget.CameraGLSurfaceView
        android:id="@+id/glSurfaceView_login_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>


    <ImageView
        android:id="@+id/iv_login_face_preview"
        android:layout_width="140dp"
        android:layout_height="140dp"
        />

    <TextView
        android:id="@+id/tv_login_face_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/iv_login_face_preview"
        app:layout_constraintRight_toRightOf="@id/iv_login_face_preview"
        app:layout_constraintLeft_toLeftOf="@id/iv_login_face_preview"

        />

    <TextView
        android:id="@+id/tv_login_face_sex_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/tv_login_face_nick"
        app:layout_constraintRight_toRightOf="@id/iv_login_face_preview"
        app:layout_constraintLeft_toLeftOf="@id/iv_login_face_preview"
        />

</android.support.constraint.ConstraintLayout>